<%- include ("partials/header.ejs") %>

<main>
    <h1>View Events</h1>
    <p>You can track the progress of your events and update any of their information using the Modify link on the left.</p>
    <table>
        <thead>
            <tr>
                <th scope="col">Actions</th>
                <th scope="col">Title</th>
                <th scope="col">District Office</th>
                <th scope="col">Start Date</th>
                <!-- <th scope="col">End Date</th> -->
                <th scope="col">Start Time</th>
                <!-- <th scope="col">End Time</th> -->
                <th scope="col">Status</th>
            </tr>
        </thead>
        <tbody>
            <% events.forEach(function(event) { %>
            <tr>
                <td class="event-link"><a href="/events/<%= event.id %>/edit">Modify</a>
                <td class="event-name"><%= event.title %></td>
                <td class="event-districtoffice"><%= event.office %></td>
                <td class="event-startdate"><%= event.start_date %></td>
                <!-- <td class="event-enddate"><%= event.end_date %></td> -->
                <td class="event-starttime"><%= event.start_time %></td>
                <!-- <td class="event-endtime"><%= event.end_time %></td> -->
                <td class="event-status"><%= event.status %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</main>

<%- include ("partials/footer.ejs") %>